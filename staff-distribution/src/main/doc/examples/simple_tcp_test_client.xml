<project name="simple_tcp_test_client" default="test">
  <dirname property="test.base.dir" file="${ant.file}" />
  <import file="${test.base.dir}/fix_common.xml" />

<target name="test" depends="clean">
       <tcpSimpleClient host="localhost" port="19000" id="cl1"/>

       <tcpSimpleStart refid="cl1"/>       
         <tcpSimpleSend refid="cl1" file="SNDR-TRGT_11131314460871.in-1" repeatDelay="1"/>
         <tcpSimpleSend refid="cl1" file="SNDR-TRGT_11131314460871.in-2" repeatDelay="1"/>
         <tcpSimpleSend refid="cl1" file="SNDR-TRGT_11131314460871.in-3" repeatDelay="1"/>
         <tcpSimpleSend refid="cl1" file="SNDR-TRGT_11131314460871.in-4" repeatDelay="1"/>
       <tcpSimpleStop  refid="cl1"/>

</target>

</project>
